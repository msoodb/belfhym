CC=arm-none-eabi-gcc
AS=arm-none-eabi-as
LD=arm-none-eabi-ld
OBJCOPY=arm-none-eabi-objcopy

# Include directories â€” project headers first
INCLUDES=-Iinclude -ICMSIS/Include -IFreeRTOS/include -IFreeRTOS/portable/GCC/ARM_CM3

# Compiler flags
CFLAGS=-mcpu=cortex-m3 -mthumb -Wall -Os -ffreestanding -nostdlib $(INCLUDES)

# Linker flags
LDFLAGS=-Tld/stm32f103.ld -nostdlib -Wl,--gc-sections

# Additional flags
CFLAGS += -Wno-implicit-function-declaration
LDFLAGS += -lc -lgcc

# Source files
SRC = $(wildcard src/*.c CMSIS/device/*.c FreeRTOS/*.c FreeRTOS/portable/GCC/ARM_CM3/*.c)
OBJ = $(SRC:.c=.o)

# Default target: build ELF and BIN files
all: belfhym.elf belfhym.bin

# Build the ELF file
belfhym.elf: startup/startup_stm32f103.o $(OBJ)
	$(CC) $(CFLAGS) $^ -o $@ $(LDFLAGS)

# Convert ELF to binary format
belfhym.bin: belfhym.elf
	$(OBJCOPY) -O binary $< $@

# Clean the build artifacts
clean:
	rm -f $(OBJ) startup/*.o belfhym.elf belfhym.bin
